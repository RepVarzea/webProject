@model SiteVarzea.Models.GASTO

@{
    ViewBag.Title = "Novo gasto";
}

<h2>Novo gasto</h2>

<table>
    <tr>
        <th>Valor gasto</th>
        <th>Descrição</th>
        <th>Moradores a cobrar</th>
    </tr>
    <tr>
        <td>
            @Html.EditorFor(model => model.valor, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.valor, "", new {@class = "text-danger"})
        </td>
        <td>
            @Html.EditorFor(model => model.descricao, new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.descricao, "", new {@class = "text-danger"})
        </td>
        <td>
            @Html.DropDownListFor(model => model.id_morador, ViewBag.CategoryList as IEnumerable<SelectListItem>, new {@class = "form-control"})
        </td>
        <td>
            <input type="button" value="+" class="btn btn-default" />
        </td>
    </tr>

</table>

